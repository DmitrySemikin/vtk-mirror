set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR arm)
set(LINUX_ARM ON)

set(CC_DIR /opt/gcc-linaro-4.9-2015.05-x86_64_arm-linux-gnueabihf/ CACHE STRING "Path to cross-compile too" FORCE)
set(CC_ROOT_DIR ${CC_DIR}arm-linux-gnueabihf/)
set(CC_BIN_DIR  ${CC_DIR}bin/)

SET(CMAKE_C_COMPILER   ${CC_BIN_DIR}arm-linux-gnueabihf-gcc)
SET(CMAKE_CXX_COMPILER ${CC_BIN_DIR}arm-linux-gnueabihf-g++)

set(CMAKE_SYSROOT ${CC_ROOT_DIR}libc)

# search for programs in the build host directories
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)

set(PIROOT /opt/raspberrypi/rootfs/ CACHE STRING "Where the rootfs was pulled off the rpi" FORCE)
include_directories(
  ${PIROOT}/usr/include/arm-linux-gnueabihf
  ${PIROOT}/usr/include
  ${PIROOT}/usr/local/include
)

